pipeline{
    agent any
    
    environment{
        DOCKERHUB_CREDENTIALS=credentials('dockerhubcredentials')
    }
    
    tools{
        maven "maven3.8.4"
    }
    stages{
        stage('GitClone'){
            steps{
                git "https://github.com/vuslist-tech/maven-web-application"
            }
        }
        stage('TestBuild'){
            steps{
                sh "mvn clean package"
            }
        }
        
        stage('CodeQuality'){
            steps{
                sh "mvn sonar:sonar"
            }
        }
        stage('UpLoadArtifacts'){
            steps{
                sh "mvn deploy"
            }
        }
        stage('Messages'){
            steps{
                sh "echo ci job successful"
            }
        }
        
        stage('Build Docker Image'){
            steps{
                sh "sudo docker build -t tegamoore05/maven-app:1.0.0 ."
               
                echo "build image completed"
            }
        }
       
        stage('Login to Dockerhub'){
            steps{
                sh "echo $DOCKERHUB_CREDENTIALS_PSW | sudo docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin"
                echo "login complete"
            }
        }
        stage('Push Image to Dockerhub'){
            steps{
                sh "sudo docker push tegamoore05/maven-app:1.0.0"
                echo "push image complete"
            }
        }
       
    }
}
